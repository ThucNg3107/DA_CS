@model QuanLyThuVien.Models.LibraryCard
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chỉnh sửa thẻ thư viện";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 rounded-4 text-center bg-white text-black" style="max-width: 600px;">
        <h2 class="fw-bold"> Edit Library Card</h2>
        <hr class="bg-light">

        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="CardId" />

            <div class="form-group mb-3">
                <label asp-for="StudentID" class="fw-bold"></label>
                <input asp-for="StudentID" class="form-control rounded-pill border-0 shadow-sm" required />
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FullName" class="fw-bold"></label>
                <input asp-for="FullName" class="form-control rounded-pill border-0 shadow-sm" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="fw-bold"></label>
                <input asp-for="PhoneNumber" class="form-control rounded-pill border-0 shadow-sm" required />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IssuedDate" class="fw-bold"></label>
                <input asp-for="IssuedDate" type="date" class="form-control rounded-pill border-0 shadow-sm" required />
                <span asp-validation-for="IssuedDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ExpiryDate" class="fw-bold"></label>
                <input asp-for="ExpiryDate" type="date" class="form-control rounded-pill border-0 shadow-sm" required />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>

            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-success fw-bold btn-lg rounded-pill px-4 shadow-sm"> Save</button>
                <a asp-action="Index" class="btn btn-outline-black fw-bold btn-lg rounded-pill px-4 shadow-sm"> Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}