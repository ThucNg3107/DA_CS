@using Microsoft.AspNetCore.Identity
@inject SignInManager<HuyUser> SignInManager
@inject UserManager<HuyUser> UserManager

<ul class="navbar-nav d-flex flex-row align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item me-3">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Xin chào @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-light">Đăng xuất</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item me-3">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
        </li>
    }
</ul>